{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "clientContainer",
            "image": "digsim/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "serverContainer",
            "image": "digsim/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "workerContainer",
            "image": "digsim/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginxContainer",
            "image": "digsim/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "clientContainer",
                "serverContainer"
            ]
        }
    ]
}